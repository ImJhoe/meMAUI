<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClinicaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClinicaApp"
    xmlns:views="clr-namespace:ClinicaApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ClinicaApp">

    <!-- LOGIN PAGE -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <!-- ADMINISTRADOR -->
    <ShellContent
        Title="Admin Menu"
        ContentTemplate="{DataTemplate views:AdminMenuPage}"
        Route="AdminMenuPage" />

    <ShellContent
        Title="Registro Médico"
        ContentTemplate="{DataTemplate views:MedicoRegistroPage}"
        Route="MedicoRegistroPage" />

    <ShellContent
        Title="Consultar Médicos"
        ContentTemplate="{DataTemplate views:MedicoConsultaPage}"
        Route="MedicoConsultaPage" />

    <!-- ✅ RECEPCIONISTA - PUNTO 3 -->
    <ShellContent
        Title="Recepcionista Menu"
        ContentTemplate="{DataTemplate views:RecepcionistaMenuPage}"
        Route="RecepcionistaMenuPage" />

    <ShellContent
        Title="Crear Cita"
        ContentTemplate="{DataTemplate views:CitaCreacionPage}"
        Route="CitaCreacionPage" />
    <!-- ✅ NUEVO: PUNTO 5 - Registro de Paciente -->
    <ShellContent
        Title="Registro Paciente"
        ContentTemplate="{DataTemplate views:PacienteRegistroPage}"
        Route="PacienteRegistroPage" />

    <!-- MÉDICO --><!--
    <ShellContent
        Title="Médico Menu"
        ContentTemplate="{DataTemplate views:MedicoMenuPage}"
        Route="MedicoMenuPage" />

    --><!-- PACIENTE --><!--
    <ShellContent
        Title="Paciente Menu"
        ContentTemplate="{DataTemplate views:PacienteMenuPage}"
        Route="PacienteMenuPage" />-->

</Shell>