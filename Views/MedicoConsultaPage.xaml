<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ClinicaApp.Views.MedicoConsultaPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ClinicaApp.ViewModels"
             Title="Consultar Médicos - Punto 2">

    <ContentPage.BindingContext>
        <viewmodels:MedicoConsultaViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid Padding="20" RowDefinitions="Auto,*,Auto">

            <!-- HEADER -->
            <StackLayout Grid.Row="0" Spacing="15" Margin="0,0,0,20">
                <Label Text="GESTIÓN DE MÉDICOS Y HORARIOS" 
                       FontSize="22" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"
                       TextColor="DarkBlue"/>

                <Label Text="Consultar médicos, ver y actualizar horarios" 
                       FontSize="14" 
                       HorizontalOptions="Center"
                       TextColor="Gray"/>

                <!-- Botón para recargar datos -->
                <Button Text="🔄 Recargar Médicos"
                        BackgroundColor="Blue"
                        TextColor="White"
                        Command="{Binding CargarMedicosCommand}"
                        IsEnabled="{Binding IsNotLoading}"/>
                <!-- MENSAJE DE ACTUALIZACIÓN -->
            <Frame IsVisible="{Binding MostrandoMensajeActualizacion}"
            BackgroundColor="LightGreen" 
            Padding="10" 
            CornerRadius="5"
            Margin="0,5,0,10">
            <Label Text="{Binding MensajeActualizacion}" 
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="DarkGreen"/>
                            </Frame>
            </StackLayout>
         

            <!-- CONTENIDO PRINCIPAL -->
            <StackLayout Grid.Row="1" Spacing="20">

                <!-- LOADING INDICATOR -->
                <ActivityIndicator IsVisible="{Binding IsLoading}" 
                                   IsRunning="{Binding IsLoading}"
                                   Color="Blue" />

                <!-- ERROR MESSAGE -->
                <Label Text="{Binding ErrorMessage}" 
                       TextColor="Red" 
                       IsVisible="{Binding HasError}"
                       HorizontalOptions="Center"/>

                <!-- VISTA DE HORARIOS (cuando se está mostrando horarios de un médico) -->
                <StackLayout IsVisible="{Binding MostrandoHorarios}">

                    <!-- HEADER DE HORARIOS -->
                    <Frame BackgroundColor="LightBlue" Padding="15" CornerRadius="10">
                        <StackLayout>
                            <Label Text="{Binding MedicoSeleccionado.NombreCompleto, StringFormat='Horarios de {0}'}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="DarkBlue"/>
                            <Label Text="{Binding MedicoSeleccionado.NombreEspecialidad}" 
                                   FontSize="14" 
                                   TextColor="Gray"/>

                            <Button Text="❌ Cerrar Horarios"
                                    BackgroundColor="Gray"
                                    TextColor="White"
                                    Command="{Binding CerrarHorariosCommand}"
                                    HorizontalOptions="End"
                                    Margin="0,10,0,0"/>
                        </StackLayout>
                    </Frame>

                    <!-- LISTA DE HORARIOS -->
                    <CollectionView ItemsSource="{Binding HorariosDelMedico}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="White" 
                                       BorderColor="LightGreen" 
                                       CornerRadius="8" 
                                       Margin="0,5"
                                       Padding="15">

                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">

                                        <!-- ICONO -->
                                        <Label Grid.Column="0" 
                                               Text="🕒" 
                                               FontSize="20" 
                                               VerticalOptions="Center"/>

                                        <!-- INFO DEL HORARIO -->
                                        <StackLayout Grid.Column="1" Margin="10,0,0,0">
                                            <Label Text="{Binding HorarioTexto}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="DarkGreen"/>
                                            <Label Text="{Binding NombreSucursal, StringFormat='Sucursal: {0}'}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                        </StackLayout>

                                        <!-- BOTÓN EDITAR -->
                                        <Button Grid.Column="2"
                                                Text="✏️"
                                                BackgroundColor="Orange"
                                                TextColor="White"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                FontSize="16"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MedicoConsultaViewModel}}, Path=EditarHorarioCommand}"
                                                CommandParameter="{Binding}"
                                                Margin="5,0,0,0"/>

                                        <!-- BOTÓN ELIMINAR -->
                                        <Button Grid.Column="3"
                                                Text="🗑️"
                                                BackgroundColor="Red"
                                                TextColor="White"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                FontSize="16"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MedicoConsultaViewModel}}, Path=EliminarHorarioCommand}"
                                                CommandParameter="{Binding}"
                                                Margin="5,0,0,0"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- MENSAJE SI NO HAY HORARIOS -->
                    <StackLayout IsVisible="{Binding HorariosDelMedico.Count, Converter={StaticResource IntToBoolConverter}}"
                                 HorizontalOptions="Center" 
                                 Margin="20">
                        <Label Text="📅" FontSize="50" HorizontalOptions="Center"/>
                        <Label Text="No hay horarios asignados" 
                               FontSize="16" 
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                        <Button Text="➕ Asignar Horarios"
                                BackgroundColor="Green"
                                TextColor="White"
                                Command="{Binding ConfigurarHorariosCommand}"
                                CommandParameter="{Binding MedicoSeleccionado}"
                                Margin="0,10,0,0"/>
                    </StackLayout>

                </StackLayout>

                <!-- LISTA DE MÉDICOS (cuando no se están mostrando horarios) -->
                <CollectionView ItemsSource="{Binding Medicos}"
                                IsVisible="{Binding MostrandoHorarios, Converter={StaticResource InvertedBoolConverter}}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White" 
                                   BorderColor="LightGray" 
                                   CornerRadius="10" 
                                   Margin="0,5"
                                   Padding="15">

                                <StackLayout Spacing="10">

                                    <!-- INFO DEL MÉDICO -->
                                    <StackLayout Orientation="Horizontal" Spacing="10">
                                        <Label Text="👨‍⚕️" FontSize="20" VerticalOptions="Center"/>
                                        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                                            <Label Text="{Binding NombreCompleto}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="DarkBlue"/>
                                            <Label Text="{Binding NombreEspecialidad}" 
                                                   FontSize="14" 
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding Correo}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding Cedula, StringFormat='Cédula: {0}'}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                        </StackLayout>
                                    </StackLayout>

                                    <!-- BOTONES DE ACCIÓN -->
                                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                        <Button Grid.Column="0"
                                                Text="📅 Ver Horarios"
                                                BackgroundColor="Green"
                                                TextColor="White"
                                                FontSize="12"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MedicoConsultaViewModel}}, Path=VerHorariosCommand}"
                                                CommandParameter="{Binding}"/>

                                        <Button Grid.Column="1"
                                                Text="⚙️ Configurar"
                                                BackgroundColor="Orange"
                                                TextColor="White"
                                                FontSize="12"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MedicoConsultaViewModel}}, Path=ConfigurarHorariosCommand}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>

                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- MENSAJE SI NO HAY MÉDICOS -->
                <StackLayout IsVisible="{Binding NoHayMedicos}" 
                             HorizontalOptions="Center" 
                             VerticalOptions="Center"
                             Spacing="10">
                    <Label Text="👨‍⚕️" FontSize="50" HorizontalOptions="Center"/>
                    <Label Text="No hay médicos registrados" 
                           FontSize="16" 
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                    <Label Text="Use el Punto 1 para registrar médicos" 
                           FontSize="14" 
                           HorizontalOptions="Center"
                           TextColor="Gray"/>
                </StackLayout>

            </StackLayout>

            <!-- BOTÓN VOLVER -->
            <Button Grid.Row="2"
                    Text="⬅️ Volver al Menú Admin"
                    BackgroundColor="Gray"
                    TextColor="White"
                    Margin="0,20,0,0"
                    Command="{Binding VolverAlMenuCommand}"/>

        </Grid>
    </ScrollView>

</ContentPage>