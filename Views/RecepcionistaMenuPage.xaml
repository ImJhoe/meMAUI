<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ClinicaApp.Views.RecepcionistaMenuPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- 📋 HEADER -->
            <Frame BackgroundColor="#2E7D32" 
                   CornerRadius="15" 
                   Padding="25,20"
                   HasShadow="True">
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Label Text="👨‍💼" FontSize="28"/>
                    <StackLayout>
                        <Label Text="Menú Recepcionista/Enfermero" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="White"/>
                        <Label Text="Gestión de Citas y Triaje" 
                               FontSize="14" 
                               TextColor="#C8E6C9"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- 📊 LISTA DE COTEJO - PUNTOS IMPLEMENTADOS -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="📋 Lista de Cotejo - Implementado" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#2E7D32"/>

                    <!-- ✅ PUNTO 1: TRIAJE -->
                    <Frame BackgroundColor="#E8F5E8" 
                           CornerRadius="10" 
                           Padding="15"
                           HasShadow="False">
                        <StackLayout Spacing="10">
                            <Label Text="✅ PUNTO 1: Registro de Triaje" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#2E7D32"/>
                            <Label Text="Pantalla para registrar triaje (peso, talla, presión, temperatura, etc.)" 
                                   FontSize="13" 
                                   TextColor="#666"/>
                            <Button Text="📋 ACCEDER AL TRIAJE"
                                    Command="{Binding IrATriajeCommand}"
                                    BackgroundColor="#2E7D32"
                                    TextColor="White"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    HeightRequest="45"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- 🏥 GESTIÓN DE CITAS -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="🏥 Gestión de Citas" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#1976D2"/>

                    <!-- CREAR CITA -->
                    <Button Text="📅 CREAR NUEVA CITA"
                            Command="{Binding IrACrearCitaCommand}"
                            BackgroundColor="#1976D2"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>

                    <!-- VER CITAS -->
                    <Button Text="📋 VER LISTA DE CITAS"
                            Command="{Binding IrAListaCitasCommand}"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>

                    <!-- REGISTRAR PACIENTE -->
                    <Button Text="👤 REGISTRAR PACIENTE"
                            Command="{Binding IrARegistroPacienteCommand}"
                            BackgroundColor="#9C27B0"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>
                </StackLayout>
            </Frame>

            <!-- 📊 HORARIOS Y CALENDARIO -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="📊 Horarios y Calendario" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#4CAF50"/>

                    <Button Text="🗓️ VER HORARIOS MÉDICOS"
                            Command="{Binding IrAHorariosMedicosCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>
                </StackLayout>
            </Frame>

            <!-- 🔧 ACCIONES RÁPIDAS -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout Spacing="15">
                    <Label Text="🔧 Acciones Rápidas" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#607D8B"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                Text="🔄 ACTUALIZAR"
                                Command="{Binding ActualizarCommand}"
                                BackgroundColor="#607D8B"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="8"
                                HeightRequest="45"/>

                        <Button Grid.Column="1"
                                Text="🚪 CERRAR SESIÓN"
                                Command="{Binding CerrarSesionCommand}"
                                BackgroundColor="#F44336"
                                TextColor="White"
                                FontSize="14"
                                CornerRadius="8"
                                HeightRequest="45"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- 📊 INDICADOR DE CARGA -->
            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                              IsRunning="{Binding IsBusy}"
                              Color="#2E7D32"
                              HeightRequest="50"/>

        </StackLayout>
    </ScrollView>

</ContentPage>