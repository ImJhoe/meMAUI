             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Menú Enfermero">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Bienvenido, Enfermero" 
                   FontSize="24" 
